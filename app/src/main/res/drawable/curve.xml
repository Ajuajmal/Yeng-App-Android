<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="7dip" />
            <stroke android:width="1dip" android:color="#914bed" />
            <gradient android:angle="-90" android:startColor="#8633c6" android:endColor="#f44990"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="9dip" />
            <stroke android:width="1dip" android:color="#0f0b2e" />
            <solid android:color="#4826c6"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="7dip" />
            <stroke android:width="2dip" android:color="#286099" />
            <gradient android:angle="-90" android:startColor="#286099" android:endColor="#286099" />
        </shape>
    </item>
</selector>