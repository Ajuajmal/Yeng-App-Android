<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"

    android:layout_height="match_parent"
    >
    <LinearLayout
        android:background="#ffffff"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="O-1 Admission to the M. Tech. Programme"
            android:textStyle="bold" />
        <TextView
            android:padding="5dp"
            android:text="@string/mtechAdmissionRules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="O-2 Duration of the Programme"
            android:textStyle="bold" />
        <TextView
            android:padding="5dp"
            android:text="@string/mtechDueatioProgrammeRules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="O-3 Post Graduate Programme Clusters"
            android:textStyle="bold" />
        <TextView
            android:padding="5dp"
            android:text="@string/mtechPGRules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="O-4 Specialization Streams in M. Tech., Programme"
            android:textStyle="bold" />
        <TextView
            android:padding="5dp"
            android:text="@string/mtechSpecializationRules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="O-5 M. Tech. Programme Structure"
            android:textStyle="bold" />
        <TextView
            android:padding="5dp"
            android:text="@string/mtechProgrammeStructureRules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="O-6. Course Registration and Enrolment"
            android:textStyle="bold" />
        <TextView
            android:padding="5dp"
            android:text="@string/mtechCourseRegistrationRules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="O-7 Recommended Credit distribution over the semesters"
            android:textStyle="bold" />
        <TextView
            android:padding="5dp"
            android:text="@string/mtechcreditsRules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="O-8. Academic Assessment/Evaluation"
            android:textStyle="bold" />
        <TextView
            android:padding="5dp"
            android:text="@string/mtechAcademicAssessmentRules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="O-9. Course Completion and earning of credits"
            android:textStyle="bold" />
        <TextView
            android:padding="5dp"
            android:text="@string/mtechcourseCompletionRules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="O-10. End Semester and Supplementary Examinations"
            android:textStyle="bold" />
        <TextView
            android:padding="5dp"
            android:text="@string/mtechEndsemesterRules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="O-11. Conduct of End Semester Examination "
            android:textStyle="bold" />
        <TextView
            android:padding="5dp"
            android:text="@string/mtechConductRules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="O-12. Award of M. Tech., Degree"
            android:textStyle="bold" />
        <TextView
            android:padding="5dp"
            android:text="@string/mtechAwardRules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="O-13. Amendments to Ordinance:"
            android:textStyle="bold" />
        <TextView
            android:padding="5dp"
            android:text="@string/mtechAmendmentsRules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="O- 14. Miscellaneous provisions:"
            android:textStyle="bold" />
        <TextView
            android:background="#ffffff"
            android:padding="5dp"
            android:text="@string/mtechMiscellaneousRules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/grademtech"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="5dp"
            android:text="@string/mtechLastRules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
</ScrollView>
