<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
<TextView
    android:layout_marginLeft="10dp"
    android:layout_width="wrap_content"
    android:layout_height="25dp"
    android:textSize="15sp"
    android:textColor="#000000"
    android:textStyle="bold"
    android:text="Module1"
    android:gravity="center"
    android:id="@+id/modile_num"/>
    <TextView
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="15%"
        android:layout_toRightOf="@+id/modile_num"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textSize="14sp"
        android:id="@+id/module_percentage"/>
    <hsm.yeng.syllabus.NonScrollListView
        android:padding="15dp"
        android:layout_below="@+id/modile_num"
        android:layout_marginTop="10dp"
        android:dividerHeight="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listview_module"

        android:minHeight="?android:attr/listPreferredItemHeight">
    </hsm.yeng.syllabus.NonScrollListView>



</RelativeLayout>
</android.support.v7.widget.CardView>